<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/mybiographybox">

        <TextView
            android:id="@+id/employer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mybiographytext"
            android:padding="@dimen/margin_padding_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/employment_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_small"
            android:textColor="@color/mybiographytext"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/employment__duties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mybiographytext"
            android:padding="@dimen/margin_padding_small"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/employment_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_small"
            android:textColor="@color/mybiographytext"
            android:textStyle="bold"/>

</LinearLayout>